TODO #%dot is extensible transformer

(struct posn ((complex x) y))

(define (f (posn p))
 p.x.real-part)

p.x.real-part
(#%dot (#%dot p x) real-part)
(let ([(complex tmp) (posn-x p)])
 (#%dot tmp real-part))

(define (from-origin x) : posn
  (posn x x))

(from-orign 5).x

(begin a (from-origin 5)).x

obj.(move 5 6)

(define (f (cons x y))
 stuff)
(define (f (a-cons p))
 stuff)

(define (f [: b box])
 stuff)
(define (f box.b)
 stuff)
(define (f (box x))
 stuff)

